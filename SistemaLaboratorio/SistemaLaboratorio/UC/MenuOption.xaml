<UserControl
    x:Class="SistemaLaboratorio.UC.MenuOption"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SistemaLaboratorio.UC"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="mainGrid" Padding="12,4" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Border x:Name="mainBorder" Grid.ColumnSpan="2" Background="Black" CornerRadius="15" Padding="14" />
        <Image x:Name="icon" Source="ms-appx:///Assets/home.png" Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center" />
        <TextBlock x:Name="label" Text="Opcion 1" Grid.Column="1" FontFamily="Segoe UI" FontWeight="Normal" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
    </Grid>
</UserControl>
