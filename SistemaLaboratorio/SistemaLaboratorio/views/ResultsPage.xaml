<Page
    x:Class="SistemaLaboratorio.ResultsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="20">
            <TextBlock Text="Resultados de Análisis de Sangre" 
                     Style="{ThemeResource HeaderTextBlockStyle}"
                     Margin="0,0,0,20"/>

            <TextBlock Text="Paciente: Juan Pérez" 
                     Style="{ThemeResource SubtitleTextBlockStyle}"/>
            <TextBlock Text="Fecha: 07/01/2025" 
                     Style="{ThemeResource SubtitleTextBlockStyle}"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" Margin="20">
            <StackPanel Background="Gray" Padding="40" ScrollViewer.IsVerticalRailEnabled="True">
                <Grid Margin="0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Column="0" Text="Prueba" FontWeight="Bold" Foreground="Black"/>
                    <TextBlock Grid.Column="1" Text="Resultado" FontWeight="Bold" Margin="20,0" Foreground="Black"/>
                    <TextBlock Grid.Column="2" Text="Rango Normal" FontWeight="Bold" Foreground="Black"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Hemoglobina" Margin="0,10" Foreground="Black"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="14.5 g/dL" Margin="20,10" Foreground="Black"/>
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="12.0 - 15.5 g/dL" Margin="0,10" Foreground="Black"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Glóbulos Blancos" Margin="0,10" Foreground="Black"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="7.5 x10⁹/L" Margin="20,10" Foreground="Black"/>
                    <TextBlock Grid.Row="2" Grid.Column="2" Text="4.5 - 11.0 x10⁹/L" Margin="0,10" Foreground="Black"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Plaquetas" Margin="0,10" Foreground="Black"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" Text="250 x10⁹/L" Margin="20,10" Foreground="Black"/>
                    <TextBlock Grid.Row="3" Grid.Column="2" Text="150 - 450 x10⁹/L" Margin="0,10" Foreground="Black"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Glucosa" Margin="0,10" Foreground="Black"/>
                    <TextBlock Grid.Row="4" Grid.Column="1" Text="95 mg/dL" Margin="20,10" Foreground="Black"/>
                    <TextBlock Grid.Row="4" Grid.Column="2" Text="70 - 100 mg/dL" Margin="0,10" Foreground="Black"/>
                </Grid>

                <TextBlock Text="Observaciones:" FontWeight="Bold" Margin="0,20,0,10" Foreground="Black"/>
                <TextBlock Text="Los resultados se encuentran dentro de los rangos normales. Se recomienda mantener los hábitos alimenticios actuales y realizar un seguimiento en 6 meses."
                         TextWrapping="Wrap" SelectionChanged="TextBlock_SelectionChanged" Foreground="Black"/>
                <TextBlock Text="Observaciones:" FontWeight="Bold" Margin="0,20,0,10" Foreground="Black"/>
                <TextBlock Text="Los resultados se encuentran dentro de los rangos normales. Se recomienda mantener los hábitos alimenticios actuales y realizar un seguimiento en 6 meses."
                         TextWrapping="Wrap" SelectionChanged="TextBlock_SelectionChanged" Foreground="Black"/>


                <StackPanel Margin="0,40,0,0" HorizontalAlignment="Right">
                    <TextBlock Text="Dra. Lucero González" FontWeight="Bold" Foreground="Black"/>
                    <TextBlock Text="Especialista en Análisis Clínicos" Foreground="Black"/>
                    <TextBlock Text="Cédula Profesional: 12345678" Foreground="Black"/>
                </StackPanel>
                <StackPanel Margin="0,40,0,0" HorizontalAlignment="Right">
                    <TextBlock Text="Dra. Lucero González" FontWeight="Bold" Foreground="Black"/>
                    <TextBlock Text="Especialista en Análisis Clínicos" Foreground="Black"/>
                    <TextBlock Text="Cédula Profesional: 12345678" Foreground="Black"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>